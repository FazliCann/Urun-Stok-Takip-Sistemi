@using PagedList;
@using PagedList.Mvc;
@model IPagedList<UrunTakip.Models.Satislar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Satış Listesi</h2>

<table class="table table-bordered table-striped">
    <tr>
        <th>Id</th>
        <th>Ürün Ad</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Resim</th>
        <th>Tarih</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Urun.Ad</td>
                <td>@item.Adet</td>
                <td>@item.Fiyat</td>
                <td><img src="~/Content/Image/@item.Urun.Resim" width="50" height="50"/></td>
                <td>@Convert.ToDateTime(item.Tarih).ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </tbody>
</table>

@Html.PagedListPager(Model,sayfa => Url.Action("Index",new {sayfa}),PagedListRenderOptions.Classic)

